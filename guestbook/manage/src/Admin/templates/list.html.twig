{% extends '@layout/default.html.twig' %}

{% block title %}List{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <h2>Guestbook List</h2>
            <hr>
            <table style="width:100%;">
            <tr><th>ID</th><th>Name</th><th>Email</th><th>&nbsp;</th></tr>
            {% for entry in list %}
                <tr>
                <td>{{ entry.id }}</td>
                <td>{{ entry.name }}</td>
                <td>{{ entry.email }}</td>
                <td><a href="{{ path('manage.delete', {'id' : entry.id}) }}">DELETE</a></td>
                </tr>
            {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}
