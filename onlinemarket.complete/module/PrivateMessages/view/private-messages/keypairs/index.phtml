                <h3 class="panel-title">Send New Message</h3>
            </div>
            <div class="panel-body">
                <?php $this->sendForm->setAttributes(['action' => $this->url('messages', ['action' => 'send'])]); ?>
                <?php $this->sendForm->prepare(); ?>
